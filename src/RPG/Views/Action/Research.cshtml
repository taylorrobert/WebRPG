@model RPG.Models.ActionModel


<div class="row" id="activeResearch">
    <div class="col-lg-12">
       

            <div class="row">
                @if (Model.DataCache.ActiveResearchNodes.Any())
                {
                    Model.DataCache.RefreshCache();
                    foreach (var n in Model.DataCache.ActiveResearchNodes)
                    {

                        <div class="col-lg-2 col-md-2">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-flask fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            <div class="huge">@n.ResearchNode.GetRemainingTurnsToResearch(Model.DataCache.Corporation.RD, n.RDInvested)</div>
                                            <div>Turns remaining</div>
                                        </div>
                                    </div>
                                </div>
                                <a href="#">
                                    <div class="panel-footer">
                                        <span class="pull-left">@n.ResearchNode.Name</span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                        </div>



                    }
                }

            
        </div>
    </div>
</div>


<div class="col-lg-8" id="rocketryTree">

</div>

<div class='panel panel-default'>
    <div class='panel - heading'>
        <h3 class='panel - title'>
            <i class='fa fa-money fa - fw'></i>
            Rocketry
        </h3>
    </div>
    <div class='panel - body'>
        <div class='table - responsive'>
            <table class='table table-bordered table - hover table - striped'>

                <thead><tr><th>Name</th><th>Prerequisites</th><th>Unlocks</th><th>Research Cost</th><th>Cash Cost</th><th>Actions</th></tr></thead>
                <tbody>
                @Html.Raw(Model.ResearchTreeRocketryBody)
                </tbody>
            </table>
        </div>
    </div>
</div>
